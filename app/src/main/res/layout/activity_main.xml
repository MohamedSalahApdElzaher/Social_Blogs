<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_back_activity"
    tools:context="comc.mohammedsalah.test.MainActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:layout_margin="16dp"
        android:textSize="25dp"
        android:textStyle="italic"
        android:shadowRadius="6"
        android:inputType="textEmailAddress"
        android:id="@+id/email_edit"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_mail"
        android:drawablePadding="16dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:textSize="25dp"
        android:id="@+id/pass_edit"
        android:shadowRadius="6"
        android:inputType="textPassword"
        android:layout_margin="16dp"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/ic_pass"
        android:textStyle="italic"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Confirm Password"
        android:textSize="25dp"
        android:textStyle="italic"
        android:inputType="textPassword"
        android:shadowRadius="6"
        android:layout_margin="16dp"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/ic_pass"
        android:id="@+id/confpass_edit"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/setbackbtn"
        android:padding="10dp"
        android:layout_margin="16dp"
        android:shadowRadius="8"
        android:onClick="sign_up"
        />



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Already have account ?"
    android:textSize="20dp"
    android:textStyle="normal"
    android:textColor="@android:color/white"
    android:gravity="bottom"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" sign in "
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="bottom"
        android:onClick="already_have_acc"
        android:id="@+id/text_have_acc"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:textStyle="bold"
        android:gravity="bottom"
        android:src="@drawable/ic_touch_app_black_24dp"
        />


</LinearLayout>
</LinearLayout>

</LinearLayout>
